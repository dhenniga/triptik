<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llTriptikContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/menubar"/>

    <ScrollView
        android:id="@+id/svComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:elevation="-1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivTriptikViewer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e0363a"
                android:padding="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/main"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/fragment_like_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/like_icon" />

                    <TextView
                        android:id="@+id/tvLikesTotal"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:paddingBottom="2dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="3"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/fragment_comment_button"
                    android:layout_centerInParent="true"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/chat_icon" />

                <TextView
                    android:id="@+id/tvCommentTotal"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:paddingBottom="2dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="3"/>
                </RelativeLayout>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvCommentRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <RelativeLayout
                android:id="@+id/llCommentButtonContainer"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:background="#aa000000">

                <ImageView
                    android:id="@+id/ivAddComment"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/add_comment"
                    android:layout_centerInParent="true"/>

                <ImageView
                    android:id="@+id/ivCancelAddComment"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/cancel_add_comment"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>

                <ToggleButton
                    android:id="@+id/tbtnAddComment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textOff=""
                    android:textOn=""
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:background="@null"
                    android:textSize="16sp"
                    android:gravity="center"/>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rlCommentsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlTriptikBaseline"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_alignParentBottom="true"
                android:background="#000000"
                android:elevation="4dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvTriptikBaseLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Triptik v.09 (alpha)    |    David Hennigan"
                    android:textColor="@color/main"
                    android:textSize="10dp" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <include layout="@layout/loading_triptik_gallery_overlay"/>

</RelativeLayout>