<?xml version="1.0" encoding="utf-8"?>
<com.triptik.dev.triptik.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/slCommentSwipeContainer"
    android:layout_width="match_parent"
    android:background="#f8f8f8"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llCommentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0.5dp"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:paddingBottom="25dp"
        android:paddingEnd="10dp"
        android:paddingStart="8dp"
        android:orientation="horizontal"
        android:paddingTop="18dp"
        android:weightSum="2">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivCommentThumbnail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            app:civ_border_color="#22000000"
            app:civ_border_width="1dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="0dp">


                <TextView
                    android:id="@+id/tvCommentUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCommentDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black_overlay"
                    android:textSize="10sp"
                    android:textStyle="normal" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="7dp">

                <TextView
                    android:id="@+id/tvCommentText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#99000000"
                    android:textSize="12sp"
                    />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <!--LEFT-->
    <RelativeLayout
        android:id="@+id/list_item_left"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="#333338"
        android:orientation="horizontal"
        app:bring_to_clamp="100dp"
        android:gravity="center"
        app:clamp="100dp"
        app:gravity="left"
        app:sticky="100dp"
        app:sticky_sensitivity="0.5">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@mipmap/download_icon"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <!--RIGHT-->
    <RelativeLayout
        android:id="@+id/list_item_right"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="#333338"
        android:orientation="horizontal"
        app:bring_to_clamp="100dp"
        app:clamp="100dp"
        app:gravity="right"
        app:sticky="100dp"
        app:sticky_sensitivity="0.5">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@mipmap/add_comment"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</com.triptik.dev.triptik.SwipeLayout>