<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/menubar"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000000"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@mipmap/header_icons_triptik_logo"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/menubar_triptik_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:maxLength="70"
            android:scrollHorizontally="true"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.5"/>

        <LinearLayout
            android:layout_width="117dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical|end"
            android:layout_gravity="fill"
            android:paddingEnd="10dp"
            >

            <ImageButton
                android:id="@+id/btnPublish"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/publish_icon"
                android:background="@null"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                />


            <ImageButton
                android:id="@+id/btnPublishOK"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/publish_icon_ok"
                android:background="@null"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                />

            <ImageButton
                android:id="@+id/btnUpdate"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/update_icon"
                android:background="@null"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                />

            <ImageButton
                android:id="@+id/btnUpdateOK"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/update_icon_ok"
                android:background="@null"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                />


            <ImageButton
                android:id="@+id/btnSave"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/save_icon"
                android:background="@null"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                />

            <ImageButton
                android:id="@+id/btnSaveOK"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/save_icon_ok"
                android:background="@null"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"

                />

            <ImageButton
                android:id="@+id/btnGallery"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/gallery_icon"
                android:background="@null"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                />

            <ImageButton
                android:id="@+id/btnNewTriptik"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/new_triptik_icon"
                android:background="@null"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                />

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/menu_icon"
                android:background="@null"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>